<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class
		name="uk.ac.ebi.proteome.component.TaskConcernModuleSpecification"
		table="modules" lazy="false">
		<composite-id>
			<key-property name="task" />
			<key-property name="concern" />
		</composite-id>
		<component name="moduleSpecification"
			class="uk.ac.ebi.proteome.component.ModuleSpecification">
			<property name="name" />
			<property name="className" />
			<property name="properties" />
		</component>
	</class>
</hibernate-mapping>